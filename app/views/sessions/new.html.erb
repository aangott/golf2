<div id='login'>
  <%= form_tag session_path, :class => 'form-signin', :role => 'form' do %>
    <h2>Admin Login </h2>
    <%= text_field_tag :username, '', :class => 'form-control', :placeholder => 'Username' %>
    <%= password_field_tag :password, '', :class => 'form-control', :placeholder => 'Password' %>

    <%= submit_tag 'Login', :class => 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</div>