<tr>
  <td>
    <%= select_tag('sub[:player1_id]', 
                   options_from_collection_for_select(Player.players_by_flight['Substitutes'],
                                                      :id,
                                                      :number_and_name),
                   {:include_blank => true,
                    'class' => 'form-control'}
    ) %>
  </td>
  <td>
    <%= text_field_tag('sub[:player1_score]', nil,
                       {'class' => 'form-control', 'maxlength' => '3'}) %>
