  <td>
    <%= text_field_tag('sub[:player1_adj_score]', nil, 
                       {'class' => 'form-control', 'maxlength' => '3'}) %>
  </td>
  <td>
    <%= text_field_tag('sub[:player1_points]', nil,
                       {'class' => 'form-control', 'maxlength' => '3'}) %>
  </td>
