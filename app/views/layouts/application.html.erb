<!DOCTYPE html>
<html>
<head>
  <title>Mates Golf League</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<body>
  <div id='main' class='container panel panel-default'>
    <nav class='navbar navbar-default' role='navigation'>
      <div class='navbar-header'>
        <%= link_to root_url, :class => 'navbar-brand' do %> 
          Mates Golf League <span class='small'>Sterling Heights, MI</span>
        <% end %>
      </div>
      <ul class='nav navbar-nav navbar-right'>
        <li class='major-nav'>
          <%= link_to :controller => 'rounds', :action => 'index' do %>
            <span class='calendar-glyph icon'></span>Schedule
          <% end %>
        </li>
        <li class='major-nav'>
          <%= link_to :controller => 'stats', :action => 'rankings' do %>
            <span class='trophy-glyph icon'></span>Rankings
          <% end %>
        </li>
        <li class='major-nav'>
          <%= link_to :controller => 'stats', :action => 'history' do %>
            <span class='golf-glyph icon'></span>Score History
          <% end %>
        </li>
        <li>
          <% if logged_in? %>
            <%= link_to 'Log out', logout_path %>
          <% else %>
            <%= link_to 'Admin Login', login_path %>
          <% end %>
        </li>
      </ul>
    </nav>

    <% flash.each do |key, value| %>
      <div class='alert alert-<%= key %>'>
        <%= value %>
      </div>
    <% end %>

    <%= yield %>

  </div>
</body>

</html>
